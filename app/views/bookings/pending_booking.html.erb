<h1>My Pending Requests</h1>
<div class="container">
  <div class="row">
    <div class="col">
      <% unless @bookings.nil? %>
        <% @bookings.each do |booking| %>
          <%= link_to booking_path(booking, query_type: "user"), class:"text-decoration-none" do %>
            <div class="booking-card">
              <p>Game: <%= booking.game.name %> (category: "<%= booking.game.game_type %>")</p>
              <p>@<%= booking.game.user.username %>: <%= booking.game.content %></p>
              <p>Price: <%= booking.game.price %>â‚¬</p>
              <br>
              <p>@<%= booking.user.username %>, <%= booking.created_at %></p>
              <p>Message: <%= booking.message %></p>
              <p>Status: <%= booking.status %></p>
            </div>
          <% end %>
        <% end %>
      <% end %>
    </div>
  </div>
</div>
<%= link_to "Back to home", root_path, class: "btn btn-primary" %>
