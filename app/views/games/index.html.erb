<%= render "pages/navbar"%>
<div class="container">
  <h1>List of Games</h1>
  <div class="row">
    <div class="col">
      <% unless @games.nil? %>
        <% @games.each do |game| %>
          <% if game.user_id != current_user.id %>
            <%= link_to game_path(game, query_type: "user"), class:"text-decoration-none" do %>
              <div class="game-card">
                <div class="game-card-img">
                  <% if game.photos.any? %>
                    <%= cl_image_tag game.photos.first.key, height: 300, width: 400, crop: :fit %>
                  <% end %>
                </div>
                <div class="game-card-infos">
                  <div class="game-card-title">
                    <h2><%= game.name %></h2>
                    <p><%= game.game_type %></p>
                  </div>
                  <div class="game-card-text">
                    <p>Description: "<%= game.content %>"</p>
                  </div>
                  <div class="game-card-signature">
                    <p><%= game.price %>â‚¬</p>
                  </div>
                </div>
              </div>
            <% end %>
          <% end %>
        <% end %>
      <% end %>
    </div>
  </div>
  <div style="width: 100%; height: 600px;"
    data-controller="map"
    data-map-markers-value="<%= @markers.to_json %>"
    data-map-api-key-value="<%= ENV['MAPBOX_API_KEY'] %>">
  </div>
</div>
<%= render "pages/footer"%>
