<h1>Pages#home</h1>

<% if current_user != nil %>
  <p>Logged as: <%= current_user.username %></p>
<% end %>

<%= link_to "Games List", games_path, class: "btn btn-primary py-2" %>
<%= link_to "My Pending Requests", pending_booking_bookings_path, class: "btn btn-primary py-2" %>
<%= link_to "My Pending Clients", pending_client_bookings_path, class: "btn btn-primary py-2" %>
<%= link_to "My Offers", my_offers_games_path, class: "btn btn-primary py-2" %>
<%= link_to "My Wishlist", wishlists_path, class: "btn btn-primary py-2" %>

<% if user_signed_in? %>
  <%= link_to "Log out", destroy_user_session_path, data: {turbo_method: :delete}, class: "nav-link" %>
<% else %>
  <%= link_to "Login", new_user_session_path, class: "nav-link" %>
<% end %>
