<%= render "pages/navbar"%>
<div class="container">
  <h1 class="animate-charcter">My Offers</h1>
  <%= link_to "Create an offer", new_game_path, class: "btn btn-ghost" %>
  <div class="row">
    <div class="col">
      <% unless @games.nil? %>
        <% @games.each do |game| %>
          <% if game.user_id == current_user.id %>
            <%= link_to game_path(game, query_type: "owner"), class:"text-decoration-none" do %>
              <div class="booking-card">
                <p>Game: <%= game.name %></p>
                <p>Status: </p>
                <p>Price: <%= game.price %>â‚¬</p>
              </div>
            <% end %>
          <% end %>
        <% end %>
      <% end %>
    </div>
  </div>
</div>
