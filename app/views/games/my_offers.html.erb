<h1>My Offers</h1>
<%= link_to "Back to home", root_path, class: "btn btn-primary py-2" %>
<div class="container">
  <div class="row">
    <div class="col">
      <% unless @games.nil? %>
        <% @games.each do |game| %>
          <% if game.user_id == current_user.id %>
            <%= link_to game_path(game, query_type: "owner"), class:"text-decoration-none" do %>
              <div class="game-card">
                <p>Game: <%= game.name %></p>
                <p>Type: <%= game.game_type %></p>
                <p>Description: <%= game.content %></p>
                <p>Price: <%= game.price %>â‚¬</p>
                <p>@<%= game.user.username %></p>
              </div>
            <% end %>
          <% end %>
        <% end %>
      <% end %>
    </div>
  </div>
</div>
